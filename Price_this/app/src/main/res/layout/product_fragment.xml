<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/board_frame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtView_productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:hint="@string/productToRegister" />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#a1d8e4"
            android:layout_marginBottom="10dp"/>

        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            >
        <ImageView
            android:id="@+id/imgView_productImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        </android.support.v7.widget.CardView>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            />
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/goodsTag"
                    android:textColor="#a1d8e4"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtView_goodsTag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="#a1d8e4"
                    android:textSize="20dp" />
            </TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/spec"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <TableRow>
                <TextView
                    android:id="@+id/txtView_spec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:text="@string/NULL"/>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#a1d8e4" />

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/averagePrice"
                    android:textColor="#a1d8e4"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtView_avgPrice"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/averagePrice"
                    android:textColor="#a1d8e4"
                    android:textSize="20dp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/registeredPrice"
                    android:textColor="#a1d8e4"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/txtView_regPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#a1d8e4"
                    android:textSize="20dp"
                    android:text="@string/registeredPrice"/>
            </TableRow>
            <TextView
                android:id="@+id/txtView_userPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:text="user: "/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#a1d8e4" />

            <TableRow
                android:layout_height="wrap_content">
                <!-- 원래 textView였는데 테스팅하기 쉽게 잠시 EditText로 수정했습니다! -->
                <EditText
                    android:id="@+id/txtView_priceToRegister"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:layout_weight="6"
                    android:hint="@string/recommend"
                    android:paddingLeft="10dp" />

                <Button
                    android:id="@+id/btn_plus"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_plus" />

                <Button
                    android:id="@+id/btn_minus"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_minus" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>